# Telegram
TELEGRAM_BOT_TOKEN=YOURTOKENHERE
TELEGRAM_CHAT_ID=YOURCHATIDHERE

# Paths
DB_PATH=/app/data/state.db
SOURCES_FILE=/app/sources.yaml

# Scheduling & throttling (can be adjusted as needed)
CHECK_INTERVAL_MINUTES=30 
MAX_POSTS_PER_RUN=3
MIN_DELAY_BETWEEN_POSTS=2

# Smart limits (can be adjusted as needed)
DAILY_MAX_POSTS=30
DOMAIN_MAX_PER_24H=2

# Night mode (server local time) - no posts during these hours
NIGHT_START_HOUR=0
NIGHT_END_HOUR=7

# HTTP settings
USER_AGENT=it-ambient-aggregator/1.0 (+https://example.com)